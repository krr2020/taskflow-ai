		"@biomejs/biome": "2.3.10",
		"@types/node": "22.10.1",
		"@types/mock-fs": "4.13.4",
		"@vitest/coverage-v8": "2.1.9",
		"@vitest/ui": "2.1.9",
		"mock-fs": "5.5.0",
		"memfs": "4.17.1",
		"tsx": "4.20.6",
		"typescript": "5.7.2",
		"vitest": "2.1.9"
