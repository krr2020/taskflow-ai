{
	"name": "taskflow-ai",
	"private": true,
	"type": "module",
	"version": "1.0.0",
	"packageManager": "pnpm@10.24.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=10.0.0"
	},
	"scripts": {
		"type-check": "tsc --noEmit",
