{
	"name": "taskflow",
	"private": true,
	"type": "module",
	"version": "1.0.0",
	"packageManager": "pnpm@10.24.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=10.0.0"
	},
	"scripts": {
		"type-check": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"task": "node packages/core/bin/taskflow.js"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/node": "22.12.0",
		"@vitest/coverage-v8": "4.0.16",
		"@vitest/ui": "4.0.16",
		"tsx": "4.21.0",
		"typescript": "5.9.3",
		"vitest": "4.0.16"
	}
}
