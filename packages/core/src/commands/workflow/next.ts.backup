		}

		// If active task exists and no non-intermittent tasks available, show intermittent options
		if (activeTask && !nextTask) {
			const intermittentTask = findNextAvailableTask(tasksProgress, undefined, true);

			if (intermittentTask) {
				const { task, story, feature } = intermittentTask;
				if (!activeTask) {
					return this.success(
						"Next available task found",
						[
							"Task details:",
							`  ID: ${task.id}`,
							`  Title: ${task.title}`,
